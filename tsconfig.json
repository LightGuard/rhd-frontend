{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "removeComments": true,
        "pretty": true,
        "allowJs": true,
        "lib":[
          "dom", "es5", "es6"
        ],
        "outFile": "rhd.js"
    },
    "include": [
        "src/scripts/**/rhelement.ts",
        "src/scripts/typescript/**/*",
        "src/scripts/javascript/app.js"
        //"node_modules/@fortawesome/**/*"
    ]
}
